@model NoteLookupDto

<link rel="stylesheet" href=@Url.Content("~/css/allnotes/edit-note.css")>

<div class="edit-container">
    <form class="edit-container" asp-controller="EditNote" asp-action="EditNote">
        <div class="header">
            <div class="info-div">
                <span class="note-title">@Model.Title</span>
                <div class="date-info">
                    Последние изменения:&nbsp;<span class="edit-date">@Model.EditDate.ToShortDateString()</span>
                    <input asp-for="Id" type="hidden" value="@Model.Id">
                </div>
            </div>

             
            <div class="func-note">
                <button asp-controller="EditNote" asp-action="EditNote" 
                        type="submit" class="save-btn">
                        Сохранить
                    </button>
                <button class="download-btn">
                    <svg style="width:22px;height:22px" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M2 12H4V17H20V12H22V17C22 18.11 21.11 19 20 19H4C2.9 19 2 18.11 2 17V12M12 15L17.55 9.54L16.13 8.13L13 11.25V2H11V11.25L7.88 8.13L6.46 9.55L12 15Z"/>
                    </svg>
                </button>
            </div>
        </div>

        <div class="text-container">
            <input type="text" asp-for="Title" class="n-title" placeholder="Введите заголовок" >
            <textarea asp-for="Text" class="n-text" cols="20" rows="10" placeholder="Введите текст">vvvvv</textarea>
        </div>
     </form>

</div>